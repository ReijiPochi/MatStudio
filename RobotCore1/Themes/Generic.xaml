<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:RobotCore1"
    xmlns:matgui="clr-namespace:MatGUI;assembly=MatGUI">


    <Style TargetType="{x:Type local:MainCP}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:MainCP}">
                    <Grid MinHeight="200" MinWidth="300">

                        <TextBlock Text="RobotCore 1" FontSize="20" FontFamily="Consols" Foreground="{DynamicResource MatForeGroundBrush}"
                                   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>

                        <Canvas HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50">
                            <Image Source="/RobotCore1;component/Design/BoardLayout.png" Width="600" Height="500"/>
                            <matgui:MatButton_T Width="18" Height="96" Canvas.Left="97" Canvas.Top="62" ToolTip="Motor1" ToolTipService.InitialShowDelay="0"/>
                        </Canvas>

                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
